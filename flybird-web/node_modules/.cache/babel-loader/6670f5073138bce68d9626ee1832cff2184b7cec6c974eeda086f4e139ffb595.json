{"ast":null,"code":"import { ref, onMounted, computed } from 'vue';\nimport { useRouter } from 'vue-router';\nimport { ElMessage } from 'element-plus';\nimport { useStore } from 'vuex';\nimport { MEDIA_URL } from '@/config';\nimport defaultAvatarImage from '@/assets/images/default-avatar.png';\nimport defaultBackground from '@/assets/images/default-background.jpg';\nimport { showToast } from '@/components/ToastMessage';\nimport { UserIcon, UserCircleIcon, DocumentTextIcon, BriefcaseIcon, StarIcon, CameraIcon, PhotoIcon, FolderIcon, Cog6ToothIcon, IdentificationIcon, HomeIcon, MapPinIcon, QuoteIcon, PencilSquareIcon, CrownIcon, PhoneIcon, EnvelopeIcon, SparklesIcon, PencilIcon, DocumentIcon, ChevronRightIcon, PlusIcon, TrashIcon, ChatBubbleLeftRightIcon, QuestionMarkCircleIcon, InboxArrowDownIcon, EyeIcon } from '@heroicons/vue/24/outline';\nimport profile from '@/api/profile';\nimport { eventBus } from '@/utils/eventBus';\nimport EditBasicDialog from '../dialogs/EditBasicDialog.vue';\nconst storageLimit = 10 * 1024 * 1024 * 1024; // 10GB\n\nexport default {\n  __name: 'UserHome',\n  setup(__props, {\n    expose: __expose\n  }) {\n    __expose();\n    const router = useRouter();\n    const store = useStore();\n\n    // 用户信息状态\n    const userInfo = ref({\n      nickname: '',\n      avatar: '',\n      coverImage: '',\n      gender: '',\n      isVip: false,\n      vipExpireDate: '',\n      uid: '',\n      jobTitle: ''\n    });\n\n    // 获取用户基本信息\n    const fetchUserInfo = async () => {\n      try {\n        const response = await profile.getData();\n        if (response.data?.code === 200 && response.data?.data) {\n          const data = response.data.data;\n          userInfo.value = {\n            nickname: data.user?.username || data.basic_info?.name || '',\n            avatar: formatImageUrl(data.basic_info?.avatar),\n            coverImage: formatImageUrl(data.basic_info?.background),\n            gender: data.basic_info?.gender,\n            isVip: true,\n            vipExpireDate: '2024-12-31',\n            uid: data.user?.uid || '',\n            jobTitle: data.job_intention?.job_title\n          };\n        }\n      } catch (error) {\n        console.error('获取用户信息失败:', error);\n        showToast('获取用户信息失败', 'error');\n      }\n    };\n\n    // 处理头像上传\n    const handleAvatarUpload = async event => {\n      const file = event.target.files[0];\n      if (!file) return;\n      if (!validateFile(file)) {\n        return;\n      }\n      try {\n        const formData = new FormData();\n        formData.append('avatar', file);\n        const response = await profile.uploadAvatar(formData);\n        if (response.data?.code === 200) {\n          showToast('头像上传成功', 'success');\n          const avatarUrl = response.data.data.avatar;\n          userInfo.value.avatar = formatImageUrl(avatarUrl);\n          eventBus.emit('avatar-updated', avatarUrl);\n        } else {\n          throw new Error(response.data?.message || '上传失败');\n        }\n      } catch (error) {\n        console.error('头像上传失败:', error);\n        showToast(error.message || '头像上传失败，请稍后重试', 'error');\n      }\n    };\n\n    // 处理背景图上传\n    const handleCoverUpload = async event => {\n      const file = event.target.files[0];\n      if (!file) return;\n      if (!validateFile(file)) {\n        return;\n      }\n      const formData = new FormData();\n      formData.append('background', file);\n      try {\n        const response = await profile.uploadBackground(formData);\n        if (response.data?.code === 200) {\n          showToast('背景图更新成功', 'success');\n          const backgroundUrl = response.data.data.background;\n          userInfo.value.coverImage = formatImageUrl(backgroundUrl);\n          store.commit('UPDATE_BACKGROUND', backgroundUrl);\n        }\n      } catch (error) {\n        console.error('背景图更新失败:', error);\n        showToast('背景图更新失败', 'error');\n      } finally {\n        event.target.value = '';\n      }\n    };\n\n    // 工具函数\n    const formatImageUrl = url => {\n      if (!url) return '';\n      return url.startsWith('http') ? url : `${MEDIA_URL}${url}`;\n    };\n    const validateFile = file => {\n      // 验证文件类型\n      if (!file.type.startsWith('image/')) {\n        showToast('请选择图片文件', 'error');\n        return false;\n      }\n\n      // 验证文件大小（限制为 2MB）\n      const maxSize = 2 * 1024 * 1024;\n      if (file.size > maxSize) {\n        showToast('图片大小不能超过 2MB', 'error');\n        return false;\n      }\n      return true;\n    };\n\n    // 错误处理函数\n    const handleImageError = e => {\n      e.target.src = defaultAvatarImage;\n    };\n    const handleBackgroundError = e => {\n      e.target.src = defaultBackground;\n    };\n\n    // 在组件挂载时获取用户信息\n    onMounted(async () => {\n      await fetchUserInfo();\n    });\n\n    // 创作内容模块\n    const contentActions = [{\n      title: '文章',\n      icon: DocumentTextIcon,\n      action: () => router.push('/user/center?tab=articles'),\n      count: '3篇'\n    }, {\n      title: '话题',\n      icon: ChatBubbleLeftRightIcon,\n      action: () => router.push('/user/center?tab=topics'),\n      count: '5个'\n    }, {\n      title: '问答',\n      icon: QuestionMarkCircleIcon,\n      action: () => router.push('/user/center?tab=qa'),\n      count: '8个'\n    }, {\n      title: '草稿箱',\n      icon: InboxArrowDownIcon,\n      action: () => router.push('/user/center?tab=drafts'),\n      count: '2篇'\n    }];\n\n    // 统计数据\n    const statistics = [{\n      label: '关注',\n      value: '128'\n    }, {\n      label: '粉丝',\n      value: '256'\n    }, {\n      label: '收藏',\n      value: '64'\n    }, {\n      label: '最近浏览',\n      value: '96'\n    }];\n\n    // 格式化日期\n    const formatDate = dateString => {\n      const date = new Date(dateString);\n      return date.toLocaleDateString('zh-CN', {\n        year: 'numeric',\n        month: 'numeric',\n        day: 'numeric',\n        hour: '2-digit',\n        minute: '2-digit'\n      });\n    };\n\n    // 模拟作品集数据\n    const portfolios = ref([{\n      id: 1,\n      title: '2024春季服装设计',\n      category: '设计作品',\n      cover: 'https://picsum.photos/600/400?random=1',\n      updated_at: '2024-01-15T10:30:00',\n      views: 128\n    }, {\n      id: 2,\n      title: '品牌VI设计',\n      category: '商业项目',\n      cover: 'https://picsum.photos/600/400?random=2',\n      updated_at: '2024-01-10T15:45:00',\n      views: 256\n    }]);\n    const handlePortfolioImageError = e => {\n      // 使用在线占位图服务\n      e.target.src = 'https://via.placeholder.com/120x120?text=作品封面';\n    };\n\n    // 处理作品集相关操作\n    const handleEditPortfolio = portfolio => {\n      router.push(`/portfolio/edit/${portfolio.id}`);\n    };\n    const handleDeletePortfolio = async portfolio => {\n      if (confirm('确定要删除这个作品吗？')) {\n        try {\n          // await profile.deletePortfolio(portfolio.id)\n          showToast('删除成功', 'success');\n          // 重新获取作品列表\n          // await fetchPortfolios()\n        } catch (error) {\n          showToast('删除失败，请稍后重试', 'error');\n        }\n      }\n    };\n\n    // 存储空间数据\n    const storageUsed = ref(2.5 * 1024 * 1024 * 1024); // 2.5GB\n\n    // 计算存储空间使用百分比\n    const storageUsedPercent = computed(() => {\n      return Math.min(Math.round(storageUsed.value / storageLimit * 100), 100);\n    });\n\n    // 格式化存储空间大小\n    const formatStorage = bytes => {\n      const units = ['B', 'KB', 'MB', 'GB', 'TB'];\n      let size = bytes;\n      let unitIndex = 0;\n      while (size >= 1024 && unitIndex < units.length - 1) {\n        size /= 1024;\n        unitIndex++;\n      }\n      return `${size.toFixed(1)}${units[unitIndex]}`;\n    };\n    const __returned__ = {\n      router,\n      store,\n      userInfo,\n      fetchUserInfo,\n      handleAvatarUpload,\n      handleCoverUpload,\n      formatImageUrl,\n      validateFile,\n      handleImageError,\n      handleBackgroundError,\n      contentActions,\n      statistics,\n      formatDate,\n      portfolios,\n      handlePortfolioImageError,\n      handleEditPortfolio,\n      handleDeletePortfolio,\n      storageLimit,\n      storageUsed,\n      storageUsedPercent,\n      formatStorage,\n      ref,\n      onMounted,\n      computed,\n      get useRouter() {\n        return useRouter;\n      },\n      get ElMessage() {\n        return ElMessage;\n      },\n      get useStore() {\n        return useStore;\n      },\n      get MEDIA_URL() {\n        return MEDIA_URL;\n      },\n      get defaultAvatarImage() {\n        return defaultAvatarImage;\n      },\n      get defaultBackground() {\n        return defaultBackground;\n      },\n      get showToast() {\n        return showToast;\n      },\n      get UserIcon() {\n        return UserIcon;\n      },\n      get UserCircleIcon() {\n        return UserCircleIcon;\n      },\n      get DocumentTextIcon() {\n        return DocumentTextIcon;\n      },\n      get BriefcaseIcon() {\n        return BriefcaseIcon;\n      },\n      get StarIcon() {\n        return StarIcon;\n      },\n      get CameraIcon() {\n        return CameraIcon;\n      },\n      get PhotoIcon() {\n        return PhotoIcon;\n      },\n      get FolderIcon() {\n        return FolderIcon;\n      },\n      get Cog6ToothIcon() {\n        return Cog6ToothIcon;\n      },\n      get IdentificationIcon() {\n        return IdentificationIcon;\n      },\n      get HomeIcon() {\n        return HomeIcon;\n      },\n      get MapPinIcon() {\n        return MapPinIcon;\n      },\n      get QuoteIcon() {\n        return QuoteIcon;\n      },\n      get PencilSquareIcon() {\n        return PencilSquareIcon;\n      },\n      get CrownIcon() {\n        return CrownIcon;\n      },\n      get PhoneIcon() {\n        return PhoneIcon;\n      },\n      get EnvelopeIcon() {\n        return EnvelopeIcon;\n      },\n      get SparklesIcon() {\n        return SparklesIcon;\n      },\n      get PencilIcon() {\n        return PencilIcon;\n      },\n      get DocumentIcon() {\n        return DocumentIcon;\n      },\n      get ChevronRightIcon() {\n        return ChevronRightIcon;\n      },\n      get PlusIcon() {\n        return PlusIcon;\n      },\n      get TrashIcon() {\n        return TrashIcon;\n      },\n      get ChatBubbleLeftRightIcon() {\n        return ChatBubbleLeftRightIcon;\n      },\n      get QuestionMarkCircleIcon() {\n        return QuestionMarkCircleIcon;\n      },\n      get InboxArrowDownIcon() {\n        return InboxArrowDownIcon;\n      },\n      get EyeIcon() {\n        return EyeIcon;\n      },\n      get profile() {\n        return profile;\n      },\n      get eventBus() {\n        return eventBus;\n      },\n      EditBasicDialog\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","onMounted","computed","useRouter","ElMessage","useStore","MEDIA_URL","defaultAvatarImage","defaultBackground","showToast","UserIcon","UserCircleIcon","DocumentTextIcon","BriefcaseIcon","StarIcon","CameraIcon","PhotoIcon","FolderIcon","Cog6ToothIcon","IdentificationIcon","HomeIcon","MapPinIcon","QuoteIcon","PencilSquareIcon","CrownIcon","PhoneIcon","EnvelopeIcon","SparklesIcon","PencilIcon","DocumentIcon","ChevronRightIcon","PlusIcon","TrashIcon","ChatBubbleLeftRightIcon","QuestionMarkCircleIcon","InboxArrowDownIcon","EyeIcon","profile","eventBus","EditBasicDialog","storageLimit","router","store","userInfo","nickname","avatar","coverImage","gender","isVip","vipExpireDate","uid","jobTitle","fetchUserInfo","response","getData","data","code","value","user","username","basic_info","name","formatImageUrl","background","job_intention","job_title","error","console","handleAvatarUpload","event","file","target","files","validateFile","formData","FormData","append","uploadAvatar","avatarUrl","emit","Error","message","handleCoverUpload","uploadBackground","backgroundUrl","commit","url","startsWith","type","maxSize","size","handleImageError","e","src","handleBackgroundError","contentActions","title","icon","action","push","count","statistics","label","formatDate","dateString","date","Date","toLocaleDateString","year","month","day","hour","minute","portfolios","id","category","cover","updated_at","views","handlePortfolioImageError","handleEditPortfolio","portfolio","handleDeletePortfolio","confirm","storageUsed","storageUsedPercent","Math","min","round","formatStorage","bytes","units","unitIndex","length","toFixed"],"sources":["/Users/liuzhao/Documents/Projects/flybird/flybird-web/src/views/user/MyProfile/components/UserHome.vue"],"sourcesContent":["<template>\n  <div class=\"user-home\">\n    <!-- 顶部背景和用户信息 -->\n    <div>\n      <!-- 背景图 -->\n      <div class=\"h-48 bg-gradient-to-r relative group\">\n        <img\n          :src=\"userInfo.coverImage || defaultBackground\"\n          class=\"w-full h-full object-cover rounded-lg\"\n          alt=\"背景图\"\n          @error=\"handleBackgroundError\"\n        />\n        <!-- 背景图上传按钮 -->\n        <div class=\"absolute inset-0 flex items-center justify-center bg-black bg-opacity-30 opacity-0 group-hover:opacity-100 transition-opacity\">\n          <label class=\"cursor-pointer bg-white bg-opacity-90 rounded-full p-2 hover:bg-opacity-100\">\n            <CameraIcon class=\"w-6 h-6 text-gray-600\" />\n            <input \n              type=\"file\" \n              class=\"hidden\" \n              accept=\"image/*\"\n              @change=\"handleCoverUpload\"\n            />\n          </label>\n        </div>\n      </div>\n      \n      <!-- 用户信息卡片 -->\n      <div class=\"px-4 -mt-16 relative z-10\">\n        <div class=\"bg-white rounded-lg shadow-md p-4 pb-6\">\n          <!-- 头像和基本身份信息区块 -->\n          <div class=\"flex items-center\">\n            <!-- 头像上传区域 -->\n            <div class=\"relative group\">\n              <img\n                :src=\"userInfo.avatar || defaultAvatarImage\"\n                class=\"w-20 h-20 rounded-full border-4 border-white object-cover\"\n                alt=\"头像\"\n                @error=\"handleImageError\"\n              />\n              <div class=\"absolute inset-0 flex items-center justify-center bg-black bg-opacity-30 rounded-full opacity-0 group-hover:opacity-100 transition-opacity\">\n                <label class=\"cursor-pointer\">\n                  <CameraIcon class=\"w-6 h-6 text-white\" />\n                  <input \n                    type=\"file\" \n                    class=\"hidden\" \n                    accept=\"image/*\"\n                    @change=\"handleAvatarUpload\"\n                  />\n                </label>\n              </div>\n              <span \n                v-if=\"userInfo.gender\" \n                class=\"absolute bottom-0 right-0 w-6 h-6 bg-white rounded-full flex items-center justify-center\"\n              >\n                <!-- 男性图标 -->\n                <svg \n                  v-if=\"userInfo.gender === 'male'\" \n                  class=\"w-4 h-4 text-blue-500\" \n                  viewBox=\"0 0 24 24\" \n                  fill=\"none\" \n                  stroke=\"currentColor\"\n                >\n                  <circle cx=\"12\" cy=\"12\" r=\"5\" stroke-width=\"2\"/>\n                  <path d=\"M16 8L21 3\" stroke-width=\"2\" stroke-linecap=\"round\"/>\n                  <path d=\"M21 3H16M21 3V8\" stroke-width=\"2\" stroke-linecap=\"round\"/>\n                </svg>\n                <!-- 女性图标 -->\n                <svg \n                  v-else-if=\"userInfo.gender === 'female'\" \n                  class=\"w-4 h-4 text-pink-500\" \n                  viewBox=\"0 0 24 24\" \n                  fill=\"none\" \n                  stroke=\"currentColor\"\n                >\n                  <circle cx=\"12\" cy=\"10\" r=\"5\" stroke-width=\"2\"/>\n                  <path d=\"M12 15V21\" stroke-width=\"2\" stroke-linecap=\"round\"/>\n                  <path d=\"M9 18H15\" stroke-width=\"2\" stroke-linecap=\"round\"/>\n                </svg>\n              </span>\n            </div>\n            \n            <!-- 用户基本信息 -->\n            <div class=\"ml-4 flex-1 flex flex-col justify-center min-h-[5rem]\">\n              <div class=\"flex items-center space-x-4\">\n                <h2 class=\"text-xl font-bold text-gray-900\">{{ userInfo.nickname }}</h2>\n                <!-- 会员标识 -->\n                <div \n                  class=\"flex items-center px-2 py-1 rounded-full text-xs\"\n                  :class=\"userInfo.isVip ? 'bg-gradient-to-r from-yellow-500 to-amber-500 text-white' : 'bg-gray-100 text-gray-600'\"\n                >\n                  <CrownIcon \n                    class=\"w-3.5 h-3.5 mr-1\"\n                    :class=\"userInfo.isVip ? 'text-yellow-100' : 'text-gray-400'\"\n                  />\n                  {{ userInfo.isVip ? 'VIP会员' : '普通用户' }}\n                </div>\n              </div>\n              <!-- 会员等级 -->\n              <div class=\"flex items-center mt-2\">\n                <a\n                  :href=\"`http://192.168.3.16:8080/u/${userInfo.uid}`\"\n                  target=\"_blank\"\n                  class=\"flex items-center text-xs text-gray-500 hover:text-gray-900 transition-colors\"\n                >\n                  点击查看个人主页\n                  <ChevronRightIcon class=\"w-3.5 h-3.5 ml-1\" />\n                </a>\n              </div>\n            </div>\n          </div>\n\n          <!-- 数据统计 -->\n          <div class=\"grid grid-cols-4 gap-4 mt-6\">\n            <div v-for=\"(stat, index) in statistics\" :key=\"index\" class=\"text-center\">\n              <div class=\"text-base font-bold text-gray-900\">{{ stat.value }}</div>\n              <div class=\"text-xs text-gray-500\">{{ stat.label }}</div>\n            </div>\n          </div>\n        </div>\n      </div>\n    </div>\n\n    <!-- 功能入口区域 -->\n    <div class=\"mt-8 px-4 space-y-6 relative z-0\">\n      <!-- 作品集 -->\n      <div class=\"bg-white rounded-lg shadow-md p-6\">\n        <div class=\"flex items-center justify-between mb-4\">\n          <h3 class=\"text-base font-medium text-gray-900 flex items-center\">\n            <PhotoIcon class=\"w-5 h-5 mr-2 text-gray-900\" />\n            作品集\n          </h3>\n          <!-- 添加作品按钮 -->\n          <button\n            @click=\"router.push('/portfolio/create')\"\n            class=\"flex items-center text-xs font-medium text-gray-900 hover:text-gray-700 transition-colors\"\n          >\n            <PlusIcon class=\"w-4 h-4 mr-1\" />\n            添加作品\n            <ChevronRightIcon class=\"w-4 h-4 ml-1\" />\n          </button>\n        </div>\n\n        <!-- 存储空间使用情况 -->\n        <div class=\"flex items-center mb-6 px-1\">\n          <div class=\"flex items-center justify-between w-full\">\n            <div class=\"flex items-center space-x-1\">\n              <span class=\"text-xs text-gray-500\">存储空间：</span>\n              <span class=\"text-sm font-medium text-gray-900\">{{ formatStorage(storageUsed) }}</span>\n              <span class=\"text-xs text-gray-400\">/ {{ formatStorage(storageLimit) }}</span>\n            </div>\n            <!-- 进度条 -->\n            <div class=\"w-48 h-1.5 bg-gray-100 rounded-full overflow-hidden\">\n              <div \n                class=\"h-full rounded-full transition-all duration-300\"\n                :class=\"storageUsedPercent > 80 ? 'bg-red-500' : 'bg-blue-500'\"\n                :style=\"{ width: `${storageUsedPercent}%` }\"\n              ></div>\n            </div>\n          </div>\n        </div>\n\n        <!-- 作品卡片网格 -->\n        <div v-if=\"portfolios.length > 0\" class=\"grid grid-cols-2 gap-6\">\n          <!-- 作品卡片 -->\n          <div\n            v-for=\"portfolio in portfolios\" \n            :key=\"portfolio.id\"\n            class=\"group relative bg-white rounded-xl border border-gray-100 overflow-hidden hover:shadow-lg transition-all duration-300\"\n          >\n            <!-- 操作按钮 -->\n            <div class=\"absolute top-3 right-3 flex items-center space-x-2 z-10\">\n              <button\n                @click.stop=\"handleEditPortfolio(portfolio)\"\n                class=\"p-1.5 rounded-full bg-white/90 hover:bg-white shadow-sm transition-colors\"\n              >\n                <PencilSquareIcon class=\"w-4 h-4 text-gray-700\" />\n              </button>\n              <button\n                @click.stop=\"handleDeletePortfolio(portfolio)\"\n                class=\"p-1.5 rounded-full bg-white/90 hover:bg-white shadow-sm transition-colors\"\n              >\n                <TrashIcon class=\"w-4 h-4 text-gray-700\" />\n              </button>\n            </div>\n\n            <div class=\"relative aspect-w-1 aspect-h-1 overflow-hidden\">\n              <img \n                :src=\"portfolio.cover\" \n                class=\"w-full h-full object-cover transition-transform group-hover:scale-105\"\n                @error=\"handlePortfolioImageError\"\n                @click=\"router.push(`/portfolio/${portfolio.id}`)\"\n              />\n            </div>\n            <div class=\"p-3 lg:p-4\">\n              <h4 class=\"text-xs font-medium text-gray-900\">{{ portfolio.title }}</h4>\n              <!-- 作者信息和统计 -->\n              <div class=\"flex items-center justify-between mt-2\">\n                <span class=\"text-[11px] text-gray-500\">{{ portfolio.category }}</span>\n                <div class=\"flex items-center text-[11px] text-gray-500\">\n                  <span class=\"flex items-center\">\n                    <EyeIcon class=\"w-3.5 h-3.5 mr-1\" />{{ portfolio.views || 0 }}\n                  </span>\n                </div>\n              </div>\n            </div>\n          </div>\n        </div>\n        <!-- 空状态展示 -->\n        <div \n          v-else \n          class=\"flex flex-col items-center justify-center py-12 px-4 border border-gray-100 rounded-xl\"\n        >\n          <img \n            src=\"https://api.iconify.design/solar:gallery-minimalistic-linear.svg\" \n            class=\"w-16 h-16 text-gray-300 mb-4\"\n          />\n          <p class=\"text-sm text-gray-500 mb-2\">还没有作品集展示</p>\n          <p class=\"text-xs text-gray-400\">去作品集管理页面创建你的第一个作品集吧</p>\n        </div>\n      </div>\n\n      <!-- 创作内容模块 -->\n      <div class=\"bg-white rounded-lg shadow-md p-6\">\n        <div class=\"flex items-center justify-between mb-6\">\n          <h3 class=\"text-base font-medium text-gray-900 flex items-center\">\n            <PencilSquareIcon class=\"w-5 h-5 mr-2 text-gray-900\" />\n            我的创作\n          </h3>\n          <button\n            @click=\"router.push('/user/center?tab=creations')\"\n            class=\"flex items-center text-xs font-medium text-gray-900 hover:text-gray-700 transition-colors\"\n          >\n            创作管理\n            <ChevronRightIcon class=\"w-4 h-4 ml-1\" />\n          </button>\n        </div>\n        <div class=\"grid grid-cols-4 gap-4\">\n          <div \n            v-for=\"item in contentActions\" \n            :key=\"item.title\"\n            class=\"flex flex-col items-center p-4 rounded-lg hover:bg-gray-50 transition-colors cursor-pointer\"\n            @click=\"item.action\"\n          >\n            <component\n              :is=\"item.icon\"\n              class=\"w-6 h-6 text-gray-900\"\n            />\n            <span class=\"mt-2 text-xs font-medium text-gray-900\">{{ item.title }}</span>\n            <span v-if=\"item.count\" class=\"mt-1 text-[11px] text-gray-400\">{{ item.count }}</span>\n          </div>\n        </div>\n      </div>\n    </div>\n\n    <!-- 编辑基本信息对话框 -->\n    <EditBasicDialog\n      v-model=\"showEditDialog\"\n      :initial-data=\"editInitialData\"\n      :loading=\"editLoading\"\n      @submit=\"handleEditSubmit\"\n    />\n  </div>\n</template>\n\n<script setup>\nimport { ref, onMounted, computed } from 'vue'\nimport { useRouter } from 'vue-router'\nimport { ElMessage } from 'element-plus'\nimport { useStore } from 'vuex'\nimport { MEDIA_URL } from '@/config'\nimport defaultA