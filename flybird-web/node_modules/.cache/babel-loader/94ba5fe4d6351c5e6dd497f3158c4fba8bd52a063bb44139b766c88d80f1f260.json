{"ast":null,"code":"import { ref, onMounted, computed } from 'vue';\nimport { useRouter } from 'vue-router';\nimport { ElMessage } from 'element-plus';\nimport { useStore } from 'vuex';\nimport { MEDIA_URL } from '@/config';\nimport defaultAvatarImage from '@/assets/images/default-avatar.png';\nimport defaultBackground from '@/assets/images/default-background.jpg';\nimport { showToast } from '@/components/ToastMessage';\nimport { UserIcon, UserCircleIcon, DocumentTextIcon, BriefcaseIcon, StarIcon, CameraIcon, PhotoIcon, FolderIcon, Cog6ToothIcon, IdentificationIcon, HomeIcon, MapPinIcon, QuoteIcon, PencilSquareIcon, CrownIcon, PhoneIcon, EnvelopeIcon, SparklesIcon, PencilIcon, DocumentIcon, ChevronRightIcon, PlusIcon, TrashIcon, ChatBubbleLeftRightIcon, QuestionMarkCircleIcon, InboxArrowDownIcon } from '@heroicons/vue/24/outline';\nimport profile from '@/api/profile';\nimport { eventBus } from '@/utils/eventBus';\nimport EditBasicDialog from '../dialogs/EditBasicDialog.vue';\nexport default {\n  __name: 'UserHome',\n  setup(__props, {\n    expose: __expose\n  }) {\n    __expose();\n    const router = useRouter();\n    const store = useStore();\n\n    // 用户信息状态\n    const userInfo = ref({\n      nickname: '',\n      avatar: '',\n      coverImage: '',\n      gender: '',\n      isVip: false,\n      vipExpireDate: '',\n      jobTitle: ''\n    });\n\n    // 获取用户基本信息\n    const fetchUserInfo = async () => {\n      try {\n        const response = await profile.getData();\n        if (response.data?.code === 200 && response.data?.data) {\n          const data = response.data.data;\n          userInfo.value = {\n            nickname: data.user?.username || data.basic_info?.name || '',\n            avatar: formatImageUrl(data.basic_info?.avatar),\n            coverImage: formatImageUrl(data.basic_info?.background),\n            gender: data.basic_info?.gender,\n            isVip: true,\n            vipExpireDate: '2024-12-31',\n            jobTitle: data.job_intention?.job_title\n          };\n        }\n      } catch (error) {\n        console.error('获取用户信息失败:', error);\n        showToast('获取用户信息失败', 'error');\n      }\n    };\n\n    // 处理头像上传\n    const handleAvatarUpload = async event => {\n      const file = event.target.files[0];\n      if (!file) return;\n      if (!validateFile(file)) {\n        return;\n      }\n      try {\n        const formData = new FormData();\n        formData.append('avatar', file);\n        const response = await profile.uploadAvatar(formData);\n        if (response.data?.code === 200) {\n          showToast('头像上传成功', 'success');\n          const avatarUrl = response.data.data.avatar;\n          userInfo.value.avatar = formatImageUrl(avatarUrl);\n          eventBus.emit('avatar-updated', avatarUrl);\n        } else {\n          throw new Error(response.data?.message || '上传失败');\n        }\n      } catch (error) {\n        console.error('头像上传失败:', error);\n        showToast(error.message || '头像上传失败，请稍后重试', 'error');\n      }\n    };\n\n    // 处理背景图上传\n    const handleCoverUpload = async event => {\n      const file = event.target.files[0];\n      if (!file) return;\n      if (!validateFile(file)) {\n        return;\n      }\n      const formData = new FormData();\n      formData.append('background', file);\n      try {\n        const response = await profile.uploadBackground(formData);\n        if (response.data?.code === 200) {\n          showToast('背景图更新成功', 'success');\n          const backgroundUrl = response.data.data.background;\n          userInfo.value.coverImage = formatImageUrl(backgroundUrl);\n          store.commit('UPDATE_BACKGROUND', backgroundUrl);\n        }\n      } catch (error) {\n        console.error('背景图更新失败:', error);\n        showToast('背景图更新失败', 'error');\n      } finally {\n        event.target.value = '';\n      }\n    };\n\n    // 工具函数\n    const formatImageUrl = url => {\n      if (!url) return '';\n      return url.startsWith('http') ? url : `${MEDIA_URL}${url}`;\n    };\n    const validateFile = file => {\n      // 验证文件类型\n      if (!file.type.startsWith('image/')) {\n        showToast('请选择图片文件', 'error');\n        return false;\n      }\n\n      // 验证文件大小（限制为 2MB）\n      const maxSize = 2 * 1024 * 1024;\n      if (file.size > maxSize) {\n        showToast('图片大小不能超过 2MB', 'error');\n        return false;\n      }\n      return true;\n    };\n\n    // 错误处理函数\n    const handleImageError = e => {\n      e.target.src = defaultAvatarImage;\n    };\n    const handleBackgroundError = e => {\n      e.target.src = defaultBackground;\n    };\n\n    // 在组件挂载时获取用户信息\n    onMounted(async () => {\n      await fetchUserInfo();\n    });\n\n    // 创作内容模块\n    const contentActions = [{\n      title: '文章',\n      icon: DocumentTextIcon,\n      action: () => router.push('/user/center?tab=articles'),\n      count: '3篇'\n    }, {\n      title: '话题',\n      icon: ChatBubbleLeftRightIcon,\n      action: () => router.push('/user/center?tab=topics'),\n      count: '5个'\n    }, {\n      title: '问答',\n      icon: QuestionMarkCircleIcon,\n      action: () => router.push('/user/center?tab=qa'),\n      count: '8个'\n    }, {\n      title: '草稿箱',\n      icon: InboxArrowDownIcon,\n      action: () => router.push('/user/center?tab=drafts'),\n      count: '2篇'\n    }];\n\n    // 系统设置模块\n    const settingsActions = [{\n      title: '账户设置',\n      icon: Cog6ToothIcon,\n      action: () => router.push('/user/center?tab=account')\n    }];\n\n    // 统计数据\n    const statistics = [{\n      label: '简历数',\n      value: '2'\n    }, {\n      label: '作品',\n      value: '8'\n    }, {\n      label: '收藏',\n      value: '16'\n    }, {\n      label: '获赞',\n      value: '32'\n    }];\n\n    // 格式化日期\n    const formatDate = dateString => {\n      const date = new Date(dateString);\n      return date.toLocaleDateString('zh-CN', {\n        year: 'numeric',\n        month: 'numeric',\n        day: 'numeric',\n        hour: '2-digit',\n        minute: '2-digit'\n      });\n    };\n\n    // 处理简历相关操作\n    const handleEditResume = resume => {\n      router.push(`/resume/edit/${resume.id}`);\n    };\n    const handleDeleteResume = async resume => {\n      if (confirm('确定要删除这份简历吗？')) {\n        try {\n          // await profile.deleteResume(resume.id)\n          showToast('删除成功', 'success');\n          // 重新获取简历列表\n          // await fetchResumes()\n        } catch (error) {\n          showToast('删除失败，请稍后重试', 'error');\n        }\n      }\n    };\n    const handleCreateResume = () => {\n      router.push('/resume/create');\n    };\n    const __returned__ = {\n      router,\n      store,\n      userInfo,\n      fetchUserInfo,\n      handleAvatarUpload,\n      handleCoverUpload,\n      formatImageUrl,\n      validateFile,\n      handleImageError,\n      handleBackgroundError,\n      contentActions,\n      settingsActions,\n      statistics,\n      formatDate,\n      handleEditResume,\n      handleDeleteResume,\n      handleCreateResume,\n      ref,\n      onMounted,\n      computed,\n      get useRouter() {\n        return useRouter;\n      },\n      get ElMessage() {\n        return ElMessage;\n      },\n      get useStore() {\n        return useStore;\n      },\n      get MEDIA_URL() {\n        return MEDIA_URL;\n      },\n      get defaultAvatarImage() {\n        return defaultAvatarImage;\n      },\n      get defaultBackground() {\n        return defaultBackground;\n      },\n      get showToast() {\n        return showToast;\n      },\n      get UserIcon() {\n        return UserIcon;\n      },\n      get UserCircleIcon() {\n        return UserCircleIcon;\n      },\n      get DocumentTextIcon() {\n        return DocumentTextIcon;\n      },\n      get BriefcaseIcon() {\n        return BriefcaseIcon;\n      },\n      get StarIcon() {\n        return StarIcon;\n      },\n      get CameraIcon() {\n        return CameraIcon;\n      },\n      get PhotoIcon() {\n        return PhotoIcon;\n      },\n      get FolderIcon() {\n        return FolderIcon;\n      },\n      get Cog6ToothIcon() {\n        return Cog6ToothIcon;\n      },\n      get IdentificationIcon() {\n        return IdentificationIcon;\n      },\n      get HomeIcon() {\n        return HomeIcon;\n      },\n      get MapPinIcon() {\n        return MapPinIcon;\n      },\n      get QuoteIcon() {\n        return QuoteIcon;\n      },\n      get PencilSquareIcon() {\n        return PencilSquareIcon;\n      },\n      get CrownIcon() {\n        return CrownIcon;\n      },\n      get PhoneIcon() {\n        return PhoneIcon;\n      },\n      get EnvelopeIcon() {\n        return EnvelopeIcon;\n      },\n      get SparklesIcon() {\n        return SparklesIcon;\n      },\n      get PencilIcon() {\n        return PencilIcon;\n      },\n      get DocumentIcon() {\n        return DocumentIcon;\n      },\n      get ChevronRightIcon() {\n        return ChevronRightIcon;\n      },\n      get PlusIcon() {\n        return PlusIcon;\n      },\n      get TrashIcon() {\n        return TrashIcon;\n      },\n      get ChatBubbleLeftRightIcon() {\n        return ChatBubbleLeftRightIcon;\n      },\n      get QuestionMarkCircleIcon() {\n        return QuestionMarkCircleIcon;\n      },\n      get InboxArrowDownIcon() {\n        return InboxArrowDownIcon;\n      },\n      get profile() {\n        return profile;\n      },\n      get eventBus() {\n        return eventBus;\n      },\n      EditBasicDialog\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","onMounted","computed","useRouter","ElMessage","useStore","MEDIA_URL","defaultAvatarImage","defaultBackground","showToast","UserIcon","UserCircleIcon","DocumentTextIcon","BriefcaseIcon","StarIcon","CameraIcon","PhotoIcon","FolderIcon","Cog6ToothIcon","IdentificationIcon","HomeIcon","MapPinIcon","QuoteIcon","PencilSquareIcon","CrownIcon","PhoneIcon","EnvelopeIcon","SparklesIcon","PencilIcon","DocumentIcon","ChevronRightIcon","PlusIcon","TrashIcon","ChatBubbleLeftRightIcon","QuestionMarkCircleIcon","InboxArrowDownIcon","profile","eventBus","EditBasicDialog","router","store","userInfo","nickname","avatar","coverImage","gender","isVip","vipExpireDate","jobTitle","fetchUserInfo","response","getData","data","code","value","user","username","basic_info","name","formatImageUrl","background","job_intention","job_title","error","console","handleAvatarUpload","event","file","target","files","validateFile","formData","FormData","append","uploadAvatar","avatarUrl","emit","Error","message","handleCoverUpload","uploadBackground","backgroundUrl","commit","url","startsWith","type","maxSize","size","handleImageError","e","src","handleBackgroundError","contentActions","title","icon","action","push","count","settingsActions","statistics","label","formatDate","dateString","date","Date","toLocaleDateString","year","month","day","hour","minute","handleEditResume","resume","id","handleDeleteResume","confirm","handleCreateResume"],"sources":["/Users/liuzhao/Documents/Projects/flybird/flybird-web/src/views/user/MyProfile/components/UserHome.vue"],"sourcesContent":["<template>\n  <div class=\"user-home\">\n    <!-- 顶部背景和用户信息 -->\n    <div>\n      <!-- 背景图 -->\n      <div class=\"h-48 bg-gradient-to-r relative group\">\n        <img\n          :src=\"userInfo.coverImage || defaultBackground\"\n          class=\"w-full h-full object-cover rounded-lg\"\n          alt=\"背景图\"\n          @error=\"handleBackgroundError\"\n        />\n        <!-- 背景图上传按钮 -->\n        <div class=\"absolute inset-0 flex items-center justify-center bg-black bg-opacity-30 opacity-0 group-hover:opacity-100 transition-opacity\">\n          <label class=\"cursor-pointer bg-white bg-opacity-90 rounded-full p-2 hover:bg-opacity-100\">\n            <CameraIcon class=\"w-6 h-6 text-gray-600\" />\n            <input \n              type=\"file\" \n              class=\"hidden\" \n              accept=\"image/*\"\n              @change=\"handleCoverUpload\"\n            />\n          </label>\n        </div>\n      </div>\n      \n      <!-- 用户信息卡片 -->\n      <div class=\"px-4 -mt-16 relative z-10\">\n        <div class=\"bg-white rounded-lg shadow-md p-4 pb-6\">\n          <!-- 头像和基本身份信息区块 -->\n          <div class=\"flex items-center\">\n            <!-- 头像上传区域 -->\n            <div class=\"relative group\">\n              <img\n                :src=\"userInfo.avatar || defaultAvatarImage\"\n                class=\"w-20 h-20 rounded-full border-4 border-white object-cover\"\n                alt=\"头像\"\n                @error=\"handleImageError\"\n              />\n              <div class=\"absolute inset-0 flex items-center justify-center bg-black bg-opacity-30 rounded-full opacity-0 group-hover:opacity-100 transition-opacity\">\n                <label class=\"cursor-pointer\">\n                  <CameraIcon class=\"w-6 h-6 text-white\" />\n                  <input \n                    type=\"file\" \n                    class=\"hidden\" \n                    accept=\"image/*\"\n                    @change=\"handleAvatarUpload\"\n                  />\n                </label>\n              </div>\n              <span \n                v-if=\"userInfo.gender\" \n                class=\"absolute bottom-0 right-0 w-6 h-6 bg-white rounded-full flex items-center justify-center\"\n              >\n                <!-- 男性图标 -->\n                <svg \n                  v-if=\"userInfo.gender === 'male'\" \n                  class=\"w-4 h-4 text-blue-500\" \n                  viewBox=\"0 0 24 24\" \n                  fill=\"none\" \n                  stroke=\"currentColor\"\n                >\n                  <circle cx=\"12\" cy=\"12\" r=\"5\" stroke-width=\"2\"/>\n                  <path d=\"M16 8L21 3\" stroke-width=\"2\" stroke-linecap=\"round\"/>\n                  <path d=\"M21 3H16M21 3V8\" stroke-width=\"2\" stroke-linecap=\"round\"/>\n                </svg>\n                <!-- 女性图标 -->\n                <svg \n                  v-else-if=\"userInfo.gender === 'female'\" \n                  class=\"w-4 h-4 text-pink-500\" \n                  viewBox=\"0 0 24 24\" \n                  fill=\"none\" \n                  stroke=\"currentColor\"\n                >\n                  <circle cx=\"12\" cy=\"10\" r=\"5\" stroke-width=\"2\"/>\n                  <path d=\"M12 15V21\" stroke-width=\"2\" stroke-linecap=\"round\"/>\n                  <path d=\"M9 18H15\" stroke-width=\"2\" stroke-linecap=\"round\"/>\n                </svg>\n              </span>\n            </div>\n            \n            <!-- 用户基本信息 -->\n            <div class=\"ml-4 flex-1 flex flex-col justify-center min-h-[5rem]\">\n              <div class=\"flex items-center space-x-4\">\n                <h2 class=\"text-xl font-bold text-gray-900\">{{ userInfo.nickname }}</h2>\n              </div>\n              <!-- 会员等级 -->\n              <div class=\"flex items-center justify-between mt-2\">\n                <div class=\"flex items-center\">\n                  <div \n                    class=\"flex items-center px-2 py-1 rounded-full text-xs\"\n                    :class=\"userInfo.isVip ? 'bg-gradient-to-r from-yellow-500 to-amber-500 text-white' : 'bg-gray-100 text-gray-600'\"\n                  >\n                    <CrownIcon \n                      class=\"w-3.5 h-3.5 mr-1\"\n                      :class=\"userInfo.isVip ? 'text-yellow-100' : 'text-gray-400'\"\n                    />\n                    {{ userInfo.isVip ? 'VIP会员' : '普通用户' }}\n                  </div>\n                  <span v-if=\"userInfo.isVip\" class=\"ml-2 text-xs text-amber-600\">\n                    有效期至：{{ userInfo.vipExpireDate || '2024-12-31' }}\n                  </span>\n                </div>\n                <a\n                  href=\"http://192.168.3.16:8080/pro\"\n                  target=\"_blank\"\n                  class=\"flex items-center px-3 py-1 text-xs rounded-full transition-colors\"\n                  :class=\"userInfo.isVip ? \n                    'bg-amber-50 text-amber-600 hover:bg-amber-100' : \n                    'bg-gradient-to-r from-amber-500 to-yellow-500 text-white hover:opacity-90'\"\n                >\n                  <SparklesIcon class=\"w-3.5 h-3.5 mr-1\" />\n                  {{ userInfo.isVip ? '续费会员' : '开通会员' }}\n                </a>\n              </div>\n            </div>\n          </div>\n\n          <!-- 数据统计 -->\n          <div class=\"grid grid-cols-4 gap-4 mt-6\">\n            <div v-for=\"(stat, index) in statistics\" :key=\"index\" class=\"text-center\">\n              <div class=\"text-xl font-bold text-indigo-600\">{{ stat.value }}</div>\n              <div class=\"text-sm text-gray-500\">{{ stat.label }}</div>\n            </div>\n          </div>\n        </div>\n      </div>\n    </div>\n\n    <!-- 功能入口区域 -->\n    <div class=\"mt-8 px-4 space-y-6 relative z-0\">\n      <!-- 简历管理 -->\n      <div class=\"bg-white rounded-lg shadow-md p-6\">\n        <div class=\"flex items-center justify-between mb-6\">\n          <h3 class=\"text-lg font-medium text-gray-900 flex items-center\">\n            <DocumentTextIcon class=\"w-5 h-5 mr-2 text-gray-900\" />\n            简历管理\n          </h3>\n          <button\n            @click=\"router.push('/user/center?tab=profile')\"\n            class=\"flex items-center text-sm font-medium text-gray-900 hover:text-gray-700 transition-colors\"\n          >\n            管理我的档案\n            <ChevronRightIcon class=\"w-4 h-4 ml-1\" />\n          </button>\n        </div>\n        <!-- 简历列表 -->\n        <div class=\"space-y-4\">\n          <div \n            v-for=\"resume in resumes\" \n            :key=\"resume.id\"\n            class=\"flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:border-gray-300 transition-colors\"\n          >\n            <div class=\"flex items-center\">\n              <DocumentIcon class=\"w-5 h-5 text-gray-900\" />\n              <div class=\"ml-3\">\n                <h4 class=\"text-sm font-medium text-gray-900\">{{ resume.title }}</h4>\n                <p class=\"text-xs text-gray-500 mt-0.5\">最后更新：{{ formatDate(resume.updated_at) }}</p>\n              </div>\n            </div>\n            <div class=\"flex items-center space-x-2\">\n              <button\n                @click=\"handleEditResume(resume)\"\n                class=\"p-1.5 text-gray-600 hover:text-gray-900 transition-colors\"\n              >\n                <PencilSquareIcon class=\"w-4 h-4\" />\n              </button>\n              <button\n                @click=\"handleDeleteResume(resume)\"\n                class=\"p-1.5 text-gray-400 hover:text-red-600 transition-colors\"\n              >\n                <TrashIcon class=\"w-4 h-4\" />\n              </button>\n            </div>\n          </div>\n          <!-- 添加新简历按钮 -->\n          <button\n            @click=\"handleCreateResume\"\n            class=\"w-full flex items-center justify-center p-4 border border-dashed border-gray-300 rounded-lg text-gray-600 hover:border-gray-900 hover:text-gray-900 transition-colors\"\n          >\n            <PlusIcon class=\"w-5 h-5 mr-2\" />\n            创建新简历\n          </button>\n        </div>\n      </div>\n\n      <!-- 创作内容模块 -->\n      <div class=\"bg-white rounded-lg shadow-md p-6\">\n        <div class=\"flex items-center justify-between mb-6\">\n          <h3 class=\"text-lg font-medium text-gray-900 flex items-center\">\n            <PencilSquareIcon class=\"w-5 h-5 mr-2 text-gray-900\" />\n            我的创作\n          </h3>\n          <button\n            @click=\"router.push('/user/center?tab=creations')\"\n            class=\"flex items-center text-sm font-medium text-gray-900 hover:text-gray-700 transition-colors\"\n          >\n            创作管理\n            <ChevronRightIcon class=\"w-4 h-4 ml-1\" />\n          </button>\n        </div>\n        <div class=\"grid grid-cols-4 gap-4\">\n          <div \n            v-for=\"item in contentActions\" \n            :key=\"item.title\"\n            class=\"flex flex-col items-center p-4 rounded-lg hover:bg-gray-50 transition-colors cursor-pointer\"\n            @click=\"item.action\"\n          >\n            <component\n              :is=\"item.icon\"\n              class=\"w-8 h-8 text-gray-900\"\n            />\n            <span class=\"mt-2 text-sm font-medium text-gray-900\">{{ item.title }}</span>\n            <span v-if=\"item.count\" class=\"mt-1 text-xs text-gray-400\">{{ item.count }}</span>\n          </div>\n        </div>\n      </div>\n      \n      <!-- 系统设置 -->\n      <div class=\"bg-white rounded-lg shadow-md p-6\">\n        <h3 class=\"text-lg font-medium text-gray-900 mb-4 flex items-center\">\n          <Cog6ToothIcon class=\"w-5 h-5 mr-2 text-gray-900\" />\n          系统设置\n        </h3>\n        <div class=\"grid grid-cols-4 gap-4\">\n          <div \n            v-for=\"item in settingsActions\" \n            :key=\"item.title\"\n            class=\"flex flex-col items-center p-4 rounded-lg hover:bg-gray-50 transition-colors cursor-pointer\"\n            @click=\"item.action\"\n          >\n            <component\n              :is=\"item.icon\"\n              class=\"w-8 h-8 text-gray-900\"\n            />\n            <span class=\"mt-2 text-sm font-medium text-gray-900\">{{ item.title }}</span>\n          </div>\n        </div>\n      </div>\n    </div>\n\n    <!-- 编辑基本信息对话框 -->\n    <EditBasicDialog\n      v-model=\"showEditDialog\"\n      :initial-data=\"editInitialData\"\n      :loading=\"editLoading\"\n      @submit=\"handleEditSubmit\"\n    />\n  </div>\n</template>\n\n<script setup>\nimport { ref, onMounted, computed } from 'vue'\nimport { useRouter } from 'vue-router'\nimport { ElMessage } from 'element-plus'\nimport { useStore } from 'vuex'\nimport { MEDIA_URL } from '@/config'\nimport defaultAvatarImage from '@/assets/images/default-avatar.png'\nimport defaultBackground from '@/assets/images/default-background.jpg'\nimport { showToast } from '@/components/ToastMessage'\nimport {\n  UserIcon,\n  UserCircleIcon,\n  DocumentTextIcon,\n  BriefcaseIcon,\n  StarIcon,\n  CameraIcon,\n  PhotoIcon,\n  FolderIcon,\n  Cog6ToothIcon,\n  IdentificationIcon,\n  HomeIcon,\n  MapPinIcon,\n  QuoteIcon,\n  PencilSquareIcon,\n  CrownIcon,\n  PhoneIcon,\n  EnvelopeIcon,\n  SparklesIcon,\n  PencilIcon,\n  DocumentIcon,\n  ChevronRightIcon,\n  PlusIcon,\n  TrashIcon,\n  ChatBubbleLeftRightIcon,\n  QuestionMarkCircleIcon,\n  InboxArrowDownIcon\n} from '@heroicons/vue/24/outline'\nimport profile from '@/api/profile'\nimport { eventBus } from '@/utils/eventBus'\nimport EditBasicDialog from '../dialogs/EditBasicDialog.vue'\n\nconst router = useRouter()\nconst store = useStore()\n\n// 用户信息状态\nconst userInfo = ref({\n  nickname: '',\n  avatar: '',\n  coverImage: '',\n  gender: '',\n  isVip: false,\n  vipExpireDate: '',\n  jobTitle: ''\n})\n\n// 获取用户基本信息\nconst fetchUserInfo = async () => {\n  try {\n    const response = await profile.getData()\n    if (response.data?.code === 200 && response.data?.data) {\n      const data = response.data.data\n      userInfo.value = {\n        nickname: data.user?.username || data.basic_info?.name || '',\n        avatar: formatImageUrl(data.basic_info?.avatar),\n        coverImage: formatImageUrl(data.basic_info?.background),\n        gender: data.basic_info?.gender,\n        isVip: true,\n        vipExpireDate: '2024-12-31',\n        jobTitle: data.job_intention?.job_title\n      }\n    }\n  } catch (error) {\n    console.error('获取用户信息失败:', error)\n    showToast('获取用户信息失败', 'error')\n  }\n}\n\n// 处理头像上传\nconst handleAvatarUpload = async (event) => {\n  const file = event.target.files[0]\n  if (!file) return\n  \n  if (!validateFile(file)) {\n    return\n  }\n\n  try {\n    const formData = new FormData()\n    formData.append('avatar', file)\n    \n    const response = await profile.uploadAvatar(formData)\n    if (response.data?.code === 200) {\n      showToast('头像上传成功', 'success')\n      const avatarUrl = response.data.data.avatar\n      userInfo.value.avatar = formatImageUrl(avatarUrl)\n      eventBus.emit('avatar-updated', avatarUrl)\n    } else {\n      throw new Error(response.data?.message || '上传失败')\n    }\n  } catch (error) {\n    console.error('头像上传失败:', error)\n    showToast(error.message || '头像上传失败，请稍后重试', 'error')\n  }\n}\n\n// 处理背景图上传\nconst handleCoverUpload = async (event) => {\n  const file = event.target.files[0]\n  if (!file) return\n  \n  if (!validateFile(file)) {\n    return\n  }\n  \n  const formData = new FormData()\n  formData.append('background', file)\n  \n  try {\n    const response = await profile.uploadBackground(formData)\n    if (response.data?.code === 200) {\n      showToast('背景图更新成功', 'success')\n      const backgroundUrl = response.data.data.background\n      userInfo.value.coverImage = formatImageUrl(backgroundUrl)\n      store.commit('UPDATE_BACKGROUND', backgroundUrl)\n    }\n  } catch (error) {\n    console.error('背景图更新失败:', error)\n    showToast('背景图更新失败', 'error')\n  } finally {\n    event.target.value = ''\n  }\n}\n\n// 工具函数\nconst formatImageUrl = (url) => {\n  if (!url) return ''\n  return url.startsWith('http') ? url : `${MEDIA_URL}${url}`\n}\n\nconst validateFile = (file) => {\n  // 验证文件类型\n  if (!file.type.startsWith('image/')) {\n    showToast('请选择图片文件', 'error')\n    return false\n  }\n\n  // 验证文件大小（限制为 2MB）\n  const maxSize = 2 * 1024 * 1024\n  if (file.size > maxSize) {\n    showToast('图片大小不能超过 2MB', 'error')\n    return false\n  }\n\n  return true\n}\n\n// 错误处理函数\nconst handleImageError = (e) => {\n  e.target.src = defaultAvatarImage\n}\n\nconst handleBackgroundError = (e) => {\n  e.target.src = defaultBackground\n}\n\n// 在组件挂载时获取用户信息\nonMounted(async () => {\n  await fetchUserInfo()\n})\n\n// 创作内容模块\nconst contentActions = [\n  {\n    title: '文章',\n    icon: DocumentTextIcon,\n    action: () => router.push('/user/center?tab=articles'),