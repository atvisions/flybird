{"ast":null,"code":"import { ref } from 'vue';\nimport { PencilSquareIcon, TrashIcon, DocumentTextIcon, SparklesIcon, LinkIcon } from '@heroicons/vue/24/outline';\nimport { ElMessage } from 'element-plus';\nimport { Dialog, DialogPanel, DialogTitle, TransitionRoot, TransitionChild } from '@headlessui/vue';\nimport { ExclamationTriangleIcon } from '@heroicons/vue/24/outline';\nexport default {\n  __name: 'PortfolioContent',\n  props: {\n    data: {\n      type: Array,\n      default: () => []\n    }\n  },\n  emits: ['edit', 'delete'],\n  setup(__props, {\n    expose: __expose,\n    emit: __emit\n  }) {\n    __expose();\n    const props = __props;\n    const emit = __emit;\n\n    // 作品类型映射\n    const typeMap = {\n      'project': '项目',\n      'website': '网站',\n      'app': '应用',\n      'article': '文章',\n      'other': '其他'\n    };\n\n    // 删除相关\n    const showDeleteConfirm = ref(false);\n    const deleteId = ref(null);\n    const handleDelete = id => {\n      deleteId.value = id;\n      showDeleteConfirm.value = true;\n    };\n    const confirmDelete = async () => {\n      try {\n        await emit('delete', deleteId.value);\n        showDeleteConfirm.value = false;\n        ElMessage.success('删除成功');\n      } catch (error) {\n        console.error('删除失败:', error);\n        ElMessage.error('删除失败');\n      }\n    };\n    const __returned__ = {\n      props,\n      emit,\n      typeMap,\n      showDeleteConfirm,\n      deleteId,\n      handleDelete,\n      confirmDelete,\n      ref,\n      get PencilSquareIcon() {\n        return PencilSquareIcon;\n      },\n      get TrashIcon() {\n        return TrashIcon;\n      },\n      get DocumentTextIcon() {\n        return DocumentTextIcon;\n      },\n      get SparklesIcon() {\n        return SparklesIcon;\n      },\n      get LinkIcon() {\n        return LinkIcon;\n      },\n      get ElMessage() {\n        return ElMessage;\n      },\n      get Dialog() {\n        return Dialog;\n      },\n      get DialogPanel() {\n       