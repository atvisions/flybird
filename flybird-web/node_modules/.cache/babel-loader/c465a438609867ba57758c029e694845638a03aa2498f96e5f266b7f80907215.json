\n    'doctor': '博士',\n    'other': '其他'\n  }\n  return degreeMap[degree] || degree\n}\n\n// 删除相关\nconst showDeleteConfirm = ref(false)\nconst deleteId = ref(null)\n\nconst handleDelete = (id) => {\n  deleteId.value = id\n  showDeleteConfirm.value = true\n}\n\nconst confirmDelete = async () => {\n  try {\n    console.log('准备删除教育经历:', deleteId.value)\n    await emit('delete', deleteId.value)\n    showDeleteConfirm.value = false\n    ElMessage.success('删除成功')\n  } catch (error) {\n    console.error('删除失败:', error)\n    ElMessage.error('删除失败')\n  }\n}\n</script>\n\n<style scoped>\n/* 样式与 WorkExperienceContent 相同 */\n</style> "],"mappings":"AAsKA,SAASA,GAAG,QAAQ,KAAI;AACxB,SACEC,gBAAgB,EAChBC,SAAS,EACTC,eAAe,EACfC,UAAS,QACJ,2BAA0B;AACjC,SAASC,SAAS,QAAQ,cAAa;AACvC,SACEC,MAAM,EACNC,WAAW,EACXC,WAAW,EACXC,cAAc,EACdC,eAAc,QACT,iBAAgB;AACvB,SAASC,uBAAuB,QAAQ,2BAA0B;;;;;;;;;;;;;;;IAElE,MAAMC,KAAK,GAAGC,OAAA;IAOd,MAAMC,IAAI,GAAGC,MAAA;;IAEb;IACA,MAAMC,eAAe,GAAGA,CAACC,SAAS,EAAEC,OAAO,EAAEC,SAAS,KAAK;MACzD,IAAI,CAACF,SAAS,EAAE,OAAO,EAAC;MAExB,MAAMG,KAAK,GAAG,IAAIC,IAAI,CAACJ,SAAS,CAAC,CAACK,kBAAkB,CAAC,OAAO,EAAE;QAC5DC,IAAI,EAAE,SAAS;QACfC,KAAK,EAAE;MACT,CAAC;MAED,IAAIL,SAAS,EAAE;QACb,OAAO,GAAGC,KAAK,OAAM;MACvB;MAEA,IAAIF,OAAO,EAAE;QACX,MAAMO,GAAG,GAAG,IAAIJ,IAAI,CAACH,OAAO,CAAC,CAACI,kBAAkB,CAAC,OAAO,EAAE;UACxDC,IAAI,EAAE,SAAS;UACfC,KAAK,EAAE;QACT,CAAC;QACD,OAAO,GAAGJ,KAAK,MAAMK,GAAG,EAAC;MAC3B;MAEA,OAAOL,KAAI;IACb;;IAEA;IACA,MAAMM,cAAc,GAAIC,MAAM,IAAK;MACjC,MAAMC,SAAS,GAAG;QAChB,aAAa,EAAE,IAAI;QACnB,gBAAgB,EAAE,IAAI;QACtB,UAAU,EAAE,IAAI;QAChB,QAAQ,EAAE,IAAI;QACd,QAAQ,EAAE,IAAI;QACd,OAAO,EAAE;MACX;MACA,OAAOA,SAAS,CAACD,MAAM,CAAC,IAAIA,MAAK;IACnC;;IAEA;IACA,MAAME,iBAAiB,GAAG7B,GAAG,CAAC,KAAK;IACnC,MAAM8B,QAAQ,GAAG9B,GAAG,CAAC,IAAI;IAEzB,MAAM+B,YAAY,GAAIC,EAAE,IAAK;MAC3BF,QAAQ,CAACG,KAAK,GAAGD,EAAC;MAClBH,iBAAiB,CAACI,KAAK,GAAG,IAAG;IAC/B;IAEA,MAAMC,aAAa,GAAG,MAAAA,CAAA,KAAY;MAChC,IAAI;QACFC,OAAO,CAACC,GAAG,CAAC,WAAW,EAAEN,QAAQ,CAACG,KAAK;QACvC,MAAMnB,IAAI,CAAC,QAAQ,EAAEgB,QAAQ,C