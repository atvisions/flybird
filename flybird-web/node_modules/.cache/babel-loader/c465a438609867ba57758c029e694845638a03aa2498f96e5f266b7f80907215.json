{"ast":null,"code":"import { ref } from 'vue';\nimport { PencilSquareIcon, TrashIcon, AcademicCapIcon, TrophyIcon } from '@heroicons/vue/24/outline';\nimport { ElMessage } from 'element-plus';\nimport { Dialog, DialogPanel, DialogTitle, TransitionRoot, TransitionChild } from '@headlessui/vue';\nimport { ExclamationTriangleIcon } from '@heroicons/vue/24/outline';\nexport default {\n  __name: 'EducationContent',\n  props: {\n    data: {\n      type: Array,\n      default: () => []\n    }\n  },\n  emits: ['edit', 'delete'],\n  setup(__props, {\n    expose: __expose,\n    emit: __emit\n  }) {\n    __expose();\n    const props = __props;\n    const emit = __emit;\n\n    // 格式化日期范围\n    const formatDateRange = (startDate, endDate, isCurrent) => {\n      if (!startDate) return '';\n      const start = new Date(startDate).toLocaleDateString('zh-CN', {\n        year: 'numeric',\n        month: 'numeric'\n      });\n      if (isCurrent) {\n        return `${start} - 至今`;\n      }\n      if (endDate) {\n        const end = new Date(endDate).toLocaleDateString('zh-CN', {\n          year: 'numeric',\n          month: 'numeric'\n        });\n        return `${start} - ${end}`;\n      }\n      return start;\n    };\n\n    // 获取学历显示文本\n    const getDegreeLabel = degree => {\n      const degreeMap = {\n        'high_school': '高中',\n        'junior_college': '大专',\n        'bachelor': '本科',\n        'master': '硕士',\n        'doctor': '博士',\n        'other': '其他'\n      };\n      return degreeMap[degree] || degree;\n    };\n\n    // 删除相关\n    const showDeleteConfirm = ref(false);\n    const deleteId = ref(null);\n    const handleDelete = id => {\n      deleteId.value = id;\n      showDeleteConfirm.value = true;\n    };\n    const confirmDelete = async () => {\n      try {\n        console.log('准备删除教育经历:', deleteId.value);\n        await emit('delete', deleteId.value);\n        showDeleteConfirm.value = false;\n        ElMessage.success('删除成功');\n      } catch (error) {\n        console.error('删除失败:', error);\n        ElMessage.error('删除失败');\n      }\n    };\n    const __returned__ = {\n      props,\n      emit,\n      formatDateRange,\n      getDegreeLabel,\n      showDeleteConfirm,\n      deleteId,\n      handleDelete,\n      confirmDelete,\n      ref,\n      get PencilSquareIcon() {\n        return PencilSquareIcon;\n      },\n      get TrashIcon() {\n        return TrashIcon;\n      },\n      get AcademicCapIcon() {\n        return AcademicCapIcon;\n      },\n      get TrophyIcon() {\n        return TrophyIcon;\n      },\n      get ElMessage() {\n        return ElMessage;\n      },\n      get Dialog() {\n        return Dialog;\n      },\n      get DialogPanel() {\n        return DialogPanel;\n      },\n      get DialogTitle() {\n        return DialogTitle;\n      },\n      get TransitionRoot() {\n        return TransitionRoot;\n      },\n      get TransitionChild() {\n        return TransitionChild;\n      },\n      get ExclamationTriangleIcon() {\n        return ExclamationTriangleIcon;\n      }\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","PencilSquareIcon","TrashIcon","AcademicCapIcon","TrophyIcon","ElMessage","Dialog","DialogPanel","DialogTitle","TransitionRoot","TransitionChild","ExclamationTriangleIcon","props","__props","emit","__emit","formatDateRange","startDate","endDate","isCurrent","start","Date","toLocaleDateString","year","month","end","getDegreeLabel","degree","degreeMap","showDeleteConfirm","deleteId","handleDelete","id","value","confirmDelete","console","log","success","error"],"sources":["/Users/liuzhao/Documents/Projects/flybird/flybird-web/src/views/user/MyProfile/components/EducationContent.vue"],"sourcesContent":["<template>\n  <div class=\"relative\">\n    <!-- 时间线 -->\n    <div class=\"absolute left-2 top-4 bottom-4 w-0.5 bg-gray-200\"></div>\n\n    <div \n      v-for=\"item in data\" \n      :key=\"item.id\" \n      class=\"relative pl-10 pb-8 last:pb-0\"\n    >\n      <!-- 时间线圆点 -->\n      <div class=\"absolute left-0 w-4 h-4 bg-white rounded-full border-2 border-blue-500 top-1.5\">\n        <div class=\"absolute inset-1 bg-blue-500 rounded-full\"></div>\n      </div>\n\n      <!-- 标题栏 -->\n      <div class=\"flex items-center justify-between mb-2 bg-white rounded-lg\">\n        <div class=\"flex-1 min-w-0\">\n          <h4 class=\"text-base font-medium text-gray-900 break-words\">\n            {{ item.school }}\n            <span class=\"text-sm font-normal text-gray-500 ml-2\">{{ item.major }}</span>\n          </h4>\n        </div>\n        <div class=\"flex items-center space-x-2\">\n          <!-- 编辑按钮 -->\n          <button\n            @click=\"$emit('edit', item)\"\n            class=\"p-1 rounded-full hover:bg-gray-100 transition-colors duration-200 group relative\"\n          >\n            <PencilSquareIcon class=\"w-5 h-5 text-gray-500 hover:text-gray-700\" />\n            <div class=\"absolute bottom-full left-1/2 -translate-x-1/2 mb-1 px-2 py-1 text-xs text-white bg-gray-800 rounded opacity-0 group-hover:opacity-100 whitespace-nowrap pointer-events-none transition-opacity duration-150\">\n              编辑\n            </div>\n          </button>\n          <!-- 删除按钮 -->\n          <button\n            @click=\"handleDelete(item.id)\"\n            class=\"p-1 rounded-full hover:bg-gray-100 transition-colors duration-200 group relative\"\n          >\n            <TrashIcon class=\"w-5 h-5 text-gray-500 hover:text-red-600\" />\n            <div class=\"absolute bottom-full left-1/2 -translate-x-1/2 mb-1 px-2 py-1 text-xs text-white bg-gray-800 rounded opacity-0 group-hover:opacity-100 whitespace-nowrap pointer-events-none transition-opacity duration-150\">\n              删除\n            </div>\n          </button>\n        </div>\n      </div>\n\n      <!-- 时间信息 -->\n      <div class=\"text-sm text-gray-500 mb-2\">\n  